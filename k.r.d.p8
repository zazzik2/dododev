end

function move_hero()
if btn(0) and hero.x >=1 then
hero.x -= 1.5
elseif btn(1) and hero.x <=120 then
hero.x += 1.5
elseif btn(2) and hero.y >=16 then
hero.y -= 2
sfx(6)
elseif btn(3) and hero.y <=119 then
hero.y += 2
sfx(5)
 end
end 
function draw_hero()
spr(hero.sprite,hero.x,hero.y)
end
